@model IEnumerable<OnlineProdajaKnjiga.Models.Autor>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojDijela)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biografija)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojDijela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biografija)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAutor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAutor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAutor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
