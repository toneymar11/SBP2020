@model IEnumerable<OnlineProdajaKnjiga.Models.Knjiga>

@{
    ViewData["Title"] = "Pregled Knjiga";
    Layout = "_Layout";
}

<h1>Pregled knjiga</h1>
<br />
<br />

<div style="float:left;" class="btn btn-success">
    <a class="boja fa fa-plus-circle" asp-action="Create"> &nbsp;&nbsp;Nova knjiga</a>
</div>
<br />
<br />
<br />

<table class="table table-dark table-active" id="tablica">
    <thead>
        <tr>
            <th>
                Naziv knjige
            </th>
            <th>
                Datum objave
            </th>
            <th>
                Cijena
            </th>
            <th>
                Broj stranica
            </th>
            <th>
                Autor
            </th>
            <th>
                Izdavacka kuca
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumObjave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cijena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojStranica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FkAutorNavigation.Ime) @Html.DisplayFor(modelItem => item.FkAutorNavigation.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FkIzdavackaKucaNavigation.Naziv)
                </td>
                <td>
                    <a class="btn btn-success fa fa-pencil-square-o" asp-action="Edit" asp-route-id="@item.IdKnjiga">&nbsp;Uredi</a>
                    <a class="btn btn-warning fa fa-info-circle" asp-action="Details" asp-route-id="@item.IdKnjiga">&nbsp;Detalji</a>
                    <a class="btn btn-danger fa fa-trash" asp-action="Delete" asp-route-id="@item.IdKnjiga">&nbsp;Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablica').DataTable({
                language: {
                    search: "Pretraga",
                    info: "_START_ - _END_ (ukupno _TOTAL_)",
                    lengthMenu: "Prikaži _MENU_ zapisa",
                    paginate: {
                        first: "Prva",
                        previous: "Prethodna",
                        next: "Sljedeća",
                        last: "Zadnja"
                    },
                    emptyTable: "Nema podataka za prikaz",
                    info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                    infoEmpty: "Nema podataka za prikaz",
                    infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                    zeroRecords: "Ne postoje traženi podaci"
                }
            });
        });
    </script>
}
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }

    td {
        color: black;
    }
</style>