@model OnlineProdajaKnjiga.Models.Knjiga

@{
    ViewData["Title"] = "READ";
    Layout = "_Layout";
}

<h1>Detalji knjige</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv knjige
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
           Datum objave
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumObjave)
        </dd>
        <dt class = "col-sm-2">
            Cijena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt class = "col-sm-2">
            Broj stranica
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojStranica)
        </dd>
        <dt class = "col-sm-2">
            Ime i prezime autora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkAutorNavigation.Ime) @Html.DisplayFor(model => model.FkAutorNavigation.Prezime)
        </dd>
        <dt class = "col-sm-2">
            Naziv izdavacke kuce
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkIzdavackaKucaNavigation.Naziv)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.IdKnjiga">Uredi</a> 
    <a class="btn btn-danger" asp-action="Index">Natrag na pregled</a>
</div>
