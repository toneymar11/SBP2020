@model OnlineProdajaKnjiga.Models.Knjiga

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Brisanje knjige iz baze</h1>

<h3>Jeste li sigurni da želite izbrisati knjigu?</h3>
<div>
  
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naziv knjige
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            Datum objave
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjave)
        </dd>
        <dt class="col-sm-2">
            Cijena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt class="col-sm-2">
            Broj stranica
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojStranica)
        </dd>
        <dt class="col-sm-2">
            Ime i prezime autora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkAutorNavigation.Ime) @Html.DisplayFor(model => model.FkAutorNavigation.Prezime)
        </dd>
        <dt class="col-sm-2">
            Naziv izdavacke kuce
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FkIzdavackaKucaNavigation.Naziv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdKnjiga" />
        <input type="submit" value="Izbrisi" class="btn btn-danger" /> 
        <a class="btn btn-dark" asp-action="Index">Natrag na pregled</a>
    </form>
</div>
